<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/journalListFragment">

    <fragment
        android:id="@+id/journalListFragment"
        android:name="ru.alexkubrick.android.diabetesapp.JournalListFragment"
        android:label="JournalListFragment"
        tools:layout="@layout/fragment_journal_list" >
        <action
            android:id="@+id/show_data_detail_fragment"
            app:destination="@id/dataDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/dataDetailFragment"
        android:name="ru.alexkubrick.android.diabetesapp.DataDetailFragment"
        android:label="DataDetailFragment"
        tools:layout="@layout/fragment_data_detail">
    <argument
        android:name="dataId"
        app:argType="java.util.UUID" />
        <action
            android:id="@+id/select_date"
            app:destination="@id/datePickerFragment" />
        <action
            android:id="@+id/select_time"
            app:destination="@id/timePickerFragment" />
    </fragment>
    <dialog
        android:id="@+id/datePickerFragment"
        android:name="ru.alexkubrick.android.diabetesapp.DatePickerFragment"
        android:label="DatePickerFragment" >
        <argument
            android:name="dataDate"
            app:argType="java.util.Date" />
    </dialog>
    <dialog
        android:id="@+id/timePickerFragment"
        android:name="ru.alexkubrick.android.diabetesapp.TimePickerFragment"
        android:label="TimePickerFragment" >
        <argument
            android:name="dataTime"
            app:argType="java.util.Date" />
    </dialog>
</navigation>